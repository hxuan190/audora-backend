# Database Configuration
AUDORA_DB_USER=postgres
AUDORA_DB_PASSWORD=postgres
AUDORA_DB_NAME=audora

# Kratos Database
KRATOS_DB_USER=kratos
KRATOS_DB_PASSWORD=kratos
KRATOS_DB_NAME=kratos

# Redis Configuration
REDIS_PASSWORD=audora-redis-pass

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MinIO Buckets
MINIO_BUCKET_NAME=audora
MINIO_TRACKS_BUCKET=audora-tracks
MINIO_PROCESSED_BUCKET=processed-tracks
MINIO_USE_SSL=false

# MinIO Pipeline Service Account (for audio processing)
MINIO_PIPELINE_ACCESS_KEY=pipeline-user
MINIO_PIPELINE_SECRET_KEY=pipeline-secret-key

# Application URLs
AUDORA_APP_URL=http://localhost:3000
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_ADMIN_URL=http://localhost:4434

# Kratos Security Secrets (Generate new ones for production!)
# Run: openssl rand -hex 32
KRATOS_SECRET_COOKIE=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE
KRATOS_SECRET_CIPHER=32-LONG-SECRET-AT-LEAST-32-BYTES-LONG

# JWT Secret for internal API authentication
JWT_SECRET=your-jwt-secret-here

# OAuth Configuration (Add when ready)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Configuration (Mailhog for development)
KRATOS_COURIER_SMTP_CONNECTION_URI=smtp://mailhog:1025
KRATOS_COURIER_SMTP_FROM_ADDRESS=noreply@audora.com

# File Upload Configuration
MAX_UPLOAD_SIZE=600MB
ALLOWED_AUDIO_FORMATS=flac,wav,aiff,mp3
PROCESSING_TIMEOUT=600s

# Development Settings
APP_ENV=development
KRATOS_LOG_LEVEL=debug
KRATOS_DEV_DISABLE_CSRF=true

# Optional: Monitoring
GRAFANA_PASSWORD=admin

# Production Security Notes:
# 1. Change all default passwords
# 2. Generate secure random secrets for KRATOS_SECRET_*
# 3. Use proper SSL certificates
# 4. Set APP_ENV=production
# 5. Configure proper SMTP settings
# 6. Set up proper OAuth credentials